<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Definição do Servlet para Produtos -->
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>ProdutoServlet</servlet-class>
    </servlet>

    <!-- Mapeamento do Servlet para uma URL -->
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/produtos</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet para Usuários -->
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>UsuarioServlet</servlet-class>
    </servlet>

    <!-- Mapeamento do Servlet para uma URL -->
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>

    <!-- Configuração Padrão -->
    <display-name>GerenciamentoAPIs</display-name>

</web-app>
